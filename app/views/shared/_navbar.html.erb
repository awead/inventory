<%= content_tag :nav, :class => "navbar navbar-default", :role => "navigation" do %>
  <%= content_tag :div, :class => "navbar-header" do %>
    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#atr-navbar">
      <span class="sr-only">Toggle navigation</span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
      <span class="icon-bar"></span>
    </button>
    <%= link_to "Inventory", root_path, :class => "navbar-brand" %>
  <% end %>

  <%= content_tag :div, :class => "collapse navbar-collapse", :id => "atr-navbar" do %>
    <%= content_tag :ul, :class => "nav navbar-nav" do %>
      <%= content_tag :li, :class => "dropdown" do %>
        <%= link_to 'Rooms <b class="caret"></b>'.html_safe, "#", :class => "dropdown-toggle", :data => { :toggle => "dropdown" } %>
        <%= content_tag :ul, :class => "dropdown-menu" do %>
          <%= content_tag :li, link_to("List", rooms_path) %>
          <%= content_tag :li, link_to("Add", new_room_path) %>
        <% end %>
      <% end %>
      
      <%= content_tag :li, link_to("Equipment", techlist_path) %>
      <%= content_tag :li, link_to("Jacks", jacklist_path) %>
      <%= content_tag :li, link_to("Phones", phonelist_path) %>
      <%= content_tag :li, link_to("Legend", "#", :data => { :toggle => "modal", :target => "#legend" } )%>
    <% end %>

    <%= form_tag rooms_path, :method => "get", :class => "navbar-form navbar-left", :role => "search" do %>
      <%= content_tag :div, :class => "form-group" do %>
        <%= search_field_tag "search", params[:search], :class => "form-control", :placeholder => "Search inventory ..." %>
      <% end %>
      <%= submit_tag "Search", :class => "btn btn-default" %>
      <%= link_to "Clear", rooms_path, :class => "btn" %>
    <% end %>
  <% end %>
<% end %>